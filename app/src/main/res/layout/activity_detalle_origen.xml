<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    card_view:contentPaddingRight="0dp"
    card_view:contentPaddingLeft="0dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nombre origen RSS"
            android:id="@+id/nombreOrigen"

            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="16dp"
            android:textIsSelectable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="URL Origen RSS"
            android:id="@+id/urlOrigen"
            android:layout_below="@+id/nombreOrigen"
            android:layout_alignLeft="@+id/nombreOrigen" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editarOrigen"
            android:src="@android:drawable/ic_menu_edit"
            android:background="@color/material_blue_grey_800"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/borrarOrigen"
            android:layout_toStartOf="@+id/borrarOrigen" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/borrarOrigen"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:src="@android:drawable/ic_delete"
            android:background="@color/material_blue_grey_800" />

    </RelativeLayout>


</android.support.v7.widget.CardView>
